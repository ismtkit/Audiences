<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ユーザー情報</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label>名前（ニックネーム）</label>
        <br><%= f.text_field :name, class: "form-control"%></br>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <br><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
      </div>
      <div class="form-group">
        <label>自己紹介</label>
        <br><%= f.text_area :introduction, class: "form-control"%></br>
      </div>
      <div class="form-group">
        <%= f.submit "変更を反映する", class: 'btn btn-secondary' %>
      </div>
      <% end %>
  　</div>
  </div>
</div>